{
  "name": "example/tongs-plugin",
  "type": "library",
  "description": "My plugin for Tongs",
  "keywords": [
    "laravel",
    "ssg",
    "static-site",
    "static-site-generator",
    "tongs",
    "tongs-plugin"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Example User",
      "email": "user@example.com"
    }
  ],
  "require-dev": {
    "datashaman/tongs": "0.3.*",
    "phpunit/phpunit": "^8.5"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "extra": {
    "tongs": {
      "plugins": {
        "example": "Example\\Tongs\\ExamplePlugin"
      }
    }
  },
  "autoload": {
    "psr-4": {
      "Example\\Tongs\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Example\\Tongs\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "test": "vendor/bin/phpunit"
  }
}
